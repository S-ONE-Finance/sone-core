{
  "compilerOptions": {
    "lib": [
      "ES2018"
    ],
    "module": "CommonJS",
    "target": "ES2018",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "types": [
      "@types/node",
      "@types/chai",
      "@types/mocha",
      "mocha"
    ],
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ]
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "build",
    "cache",
    "artifacts"
  ]
}